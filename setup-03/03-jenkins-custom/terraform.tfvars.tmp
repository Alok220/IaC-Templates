# 1 Backend variables
domain                 = "cluster.local"
kubernetes_config_path = "../kube_config"

# 04 - jenkins variables
jenkins_chart_repo                      = "https://charts.jenkins.io"
jenkins_chart_name                      = "jenkins"
jenkins_chart_version                   = "*"
jenkins_admin_username                  = "jenkins"
jenkins_controller_origin_image_version = "2.319.3-jdk11"
jenkins_controller_origin_image_name    = "jenkins/jenkins"
jenkins_controller_custom_image_version = "2.319.3-jdk11"
jenkins_controller_custom_image_name    = "registry.cluster.local/jenkins/custom-jenkins"

## This path needs to be created before starting the setup process
jenkins_persistent_volume_host_path = "/run/desktop/mnt/host/c/kubernetes/jenkins"